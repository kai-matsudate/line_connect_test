script charset="utf-8" src="https://static.line-scdn.net/liff/edge/2/sdk.js"
javascript:
  const getCsrfToken = () => {
    const metas = document.getElementsByTagName('meta');
    for (let meta of metas) {
      if (meta.getAttribute('name') === 'csrf-token') {
        return meta.getAttribute('content');
      }
    }
    return '';
  }

  document.addEventListener("DOMContentLoaded", async function () {
    await liff.init({ liffId: '1660751077-Ddxr23Lv' });
    const accessToken = liff.getAccessToken();
    if (!liff.isLoggedIn()) {
      liff.login();
      return;
    }

    const res = await fetch(
      '/generate_link_url?access_token=' + accessToken,
      {
        method: 'GET',
        credentials: 'same-origin',
        headers: {
          'X-CSRF-Token': getCsrfToken()
        },
      }
    );

    const json = await res.json();

    const content = document.getElementById('content');

    if (json.status) {
      redirect_url = json['data']['url'];
      liff.openWindow({
        url: redirect_url,
      });
    } else {
      const text = document.createElement(document.createTextNode('failure...'));
      content.appendChild(text);
    }
  });


  window.onload = function () {
    initVConsole();

  }

  // Initialize vConsole
  function initVConsole() {
    window.vConsole = new window.VConsole({
      defaultPlugins: ['system', 'network', 'element', 'storage'],
      maxLogNumber: 1000,
      onReady: function () {
        console.log('vConsole is ready.');
      },
      onClearLog: function () {
        console.log('on clearLog');
      }
    });
  }